@model List<CourseViewModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/Sistem.cshtml";
}

<h2>My Courses</h2>

@if (Model.Count == 0)
{
    <p>You have not created any courses yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Actions</th> <!-- Yeni kolon ekledik -->
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Date.ToShortDateString()</td>
                    <td>@course.StartTime</td>
                    <td>@course.EndTime</td>
                    <td>
                        <a href="@Url.Action("ShowQRCode", "Lesson", new { id = course.CourseId })" class="btn btn-primary">QR Göster</a>
                        <a href="@Url.Action("Attendance", "Lesson", new { id = course.CourseId })" class="btn btn-secondary">Yoklamalar</a> <!-- Yeni Buton -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
