@{
    var userId = ViewBag.UserId;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Yoklama Kaydet</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.3.8/html5-qrcode.min.js" integrity="sha512-r6rDA7W6ZeQhvl8S7yRVQUKVHdexq+GAlNkNNqVC7YyIV+NwqCTJe2hDWCiffTyRNOeGEzRRJ9ifvRm/HCzGYg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <h1>Yoklama Kaydet</h1>
    <div id="reader" style="width: 600px"></div>

    <form id="attendanceForm" action="/QRScanner/RecordAttendance" method="post">
        <input type="hidden" name="UserId" value="@userId" />
        <label for="courseId">Ders ID:</label>
        <input type="number" id="courseId" name="CourseId" required />
        <button type="submit">Yoklamayı Kaydet</button>
    </form>

    <script>
        function onScanSuccess(qrCodeMessage) {
            document.getElementById('courseId').value = qrCodeMessage;
            alert(`Ders ID'si okundu: ${qrCodeMessage}`);

            // Formu otomatik olarak gönder
            document.getElementById('attendanceForm').submit();
        }

        function onScanError(errorMessage) {
            console.warn(`QR okuma hatası: ${errorMessage}`);
        }

        const html5QrCode = new Html5Qrcode("reader");
        html5QrCode.start(
            { facingMode: "environment" },
            {
                fps: 10,
                qrbox: { width: 250, height: 250 }
            },
            onScanSuccess,
            onScanError
        ).catch(err => {
            console.error(`QR kodu başlatılamadı: ${err}`);
        });
    </script>
</body>
</html>
