
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

@model SchoolAttendance_UI.Models.RegisterViewModel

<h2>Register</h2>
<form asp-action="Register" method="post">
    <div>
        <label for="UserName">User Name</label>
        <input type="text" id="UserName" name="UserName" asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label for="SchoolNumber">School Number</label>
        <input type="text" id="SchoolNumber" name="SchoolNumber" asp-for="SchoolNumber" />
        <span asp-validation-for="SchoolNumber"></span>
    </div>
    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit">Register</button>
</form>


